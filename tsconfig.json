{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "ESNext",
    "lib": ["es5", "es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@arkitema/brand": ["./packages/brand/dist/cjs/index.js", "./packages/brand/dist/esm/index.js"]
    }
  }
}
