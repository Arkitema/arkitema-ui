{
  "name": "@arkitema/brand",
  "version": "0.1.2",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "license": "Apache-2.0",
  "files": [
    "./dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:jest": "jest",
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "postbuild": "copyfiles --flat ./src/assets/*.{png,svg,ico} ./dist/esm/assets/ && copyfiles --flat ./src/fonts/*.{css,otf} ./dist/esm/fonts/ && copyfiles --flat ./src/{assets,fonts}/*.{png,svg,ico,css} ./dist/cjs/assets/ && copyfiles --flat ./src/fonts/*.{css,otf} ./dist/cjs/fonts/",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext ts,tsx ",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "npm run storybook:test --workspaces --if-present",
    "format:fix": "prettier --write src/",
    "format": "prettier --check src/"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@storybook/addon-storyshots": "^7.0.23",
    "@storybook/react": "^7.0.23",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
